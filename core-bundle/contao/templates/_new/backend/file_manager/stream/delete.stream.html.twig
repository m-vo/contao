<turbo-stream action="update" target="file-manager--content">
    <template>
        {{ include("@Contao/backend/file_manager/_content.html.twig") }}
    </template>
</turbo-stream>

<turbo-stream action="update" target="file-manager--details">
    <template>
        {{ include("@Contao/backend/file_manager/_details.html.twig") }}
    </template>
</turbo-stream>

<turbo-stream action="prepend" target="file-manager--message">
    <template>
        <div class="message message--info">
            Successfully deleted {{ stats.deleted_files + stats.deleted_directories }} elements.
        </div>
    </template>
</turbo-stream>

{% if tree %}
    <turbo-stream action="update" target="file-manager--tree">
        <template>
            {{ include("@Contao/backend/file_manager/_tree.html.twig") }}
        </template>
    </turbo-stream>
{% endif %}
